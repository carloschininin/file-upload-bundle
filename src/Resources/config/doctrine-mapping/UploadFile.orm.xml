<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="CarlosChininin\UploadFile\Model\UploadFile" table="upload_file">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" column="name" length="255" />

        <field name="secure" column="secure" length="48" unique="true" />

        <field name="path" column="path" length="255" nullable="true" />
    </entity>
</doctrine-mapping>
