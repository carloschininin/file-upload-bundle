<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="false">
        </defaults>
        <prototype namespace="CarlosChininin\FileUpload\" resource="../../../src/*" exclude="../../../src/{DependencyInjection,Model}"/>
        <service id="CarlosChininin\FileUpload\Service\FileUploadService">
            <argument key="$targetDirectory">%upload_file_directory%</argument>
        </service>
    </services>
</container>
